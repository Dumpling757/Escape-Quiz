             xmlns:local="clr-namespace:Escape_Quiz"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


        <Grid Margin="0,76,0,-0.4">
        <Image HorizontalAlignment="Left" Height="44" Margin="0,-74,0,0" VerticalAlignment="Top" Width="799" Source="/Assets/Start.png" Stretch="Fill"/>

