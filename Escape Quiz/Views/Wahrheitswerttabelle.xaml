        </Frame>
        <ProgressBar HorizontalAlignment="Left" Height="10" Margin="676,-60,0,0" VerticalAlignment="Top" Width="100"/>


        <!-- Click="Button_NextQuestion" -->
    </Grid>
</UserControl>
