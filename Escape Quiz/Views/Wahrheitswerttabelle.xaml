                    <!-- TODO Farbe Klaeren fuer Hintergrund -->

                    <Button Content="Nächste Frage" HorizontalAlignment="Left" Margin="558,287,0,0" Width="197" Height="67" VerticalAlignment="Top"  FontFamily="Arial" FontSize="20" Click="Button_NextQuestion" />

